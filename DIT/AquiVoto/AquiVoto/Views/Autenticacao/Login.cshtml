@model AquiVoto.Models.UsuarioModel

<style type="text/css">
    input, select, textarea {
        width: 350px;
    }
</style>

<br />

<!-- DIV TABS-->
<div id="divTabs" style="padding-left:300px; padding-right:300px;">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a id="tabLogarTitulo" href="#tabLogar" aria-controls="tabLogar"
               role="tab" data-toggle="tab">Acesso</a>
        </li>

        <li role="presentation">
            <a href="#tabNovoCadastro" id="tabNovoCadastroTitulo" aria-controls="tabNovoCadastro" role="tab"
               data-toggle="tab">Nova Conta</a>
        </li>
    </ul>

    <br />

    <!-- Tab panes -->
    <div class="tab-content">

        <!-- TAB MY BANDS -->
        <div role="tabpanel" class="tab-pane active fade in" id="tabLogar">

            <div id="resultSuccessAutenticacao"></div>
            <div id="resultFailedAutenticacao"></div>

            <form id="formAutenticacao" style="padding-left:30px; padding-right:30px;">

                <h4 style="text-align:center">Efetue seu login</h4>

                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(f => f.Email_Logar, new
   {
       @id = "txtEmail",
       @name = "txtEmail",
       @class = "form-control",
       @placeholder = "Digite seu email",
       @maxlenght = "80",
       @type = "email",
       @autocomplete = "off"
   })
                </div>

                <div class="form-group">
                    <label>Senha</label>
                    @Html.TextBoxFor(f => f.Senha_Logar, new
   {
       @id = "txtSenha",
       @name = "txtSenha",
       @placeholder = "Digite sua senha",
       @class = "form-control",
       @maxlenght = "20",
       @type = "password",
       @autocomplete = "off"
   })

                </div>
                <a href="/Posts/Listagem" id="btnLogar1" name="btnLogar1" class="btn btn-primary" style="width:100%">Logar</a>

            </form>
            <br />
            <br />
            <br />
            <br />
        </div>

        <!-- TAB INVITES -->
        <div role="tabpanel" class="tab-pane fade in" id="tabNovoCadastro">


            <form id="formCadastro" style="padding-left:30px; padding-right:30px;">

                <div id="resultSuccessCadastro"></div>
                <div id="resultFailedCadastro"></div>

                <h4 style="text-align:center">Crie aqui o seu cadastro</h4>

                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()


                <div class="form-group">
                    <label>Nome</label>
                    @Html.TextBoxFor(f => f.Nome, new
   {
       @id = "txtNome",
       @name = "txtNome",
       @placeholder = "Digite seu nome",
       @class = "form-control",
       @maxlenght = "60",
       @autocomplete = "off"
   })
                </div>

                <div class="form-group">
                    <label>Estado</label>
                    @Html.DropDownListFor(f => f.Estado, Model.EstadosList, "- Selecione -", new
               {
                   @id = "ddEstado",
                   @name = "ddEstado",
                   @class = "form-control"
               })
                </div>

                <div class="form-group">
                    <label>Cidade</label>


                    @Html.DropDownListFor(f => f.Cidade, Model.CidadesList, "- Selecione -", new
               {
                   @id = "ddCidade",
                   @name = "ddCidade",
                   @class = "form-control"
               })
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(f => f.Email, new
   {
       @id = "txtEmailNovoCadastro",
       @name = "txtEmailNovoCadastro",
       @class = "form-control",
       @placeholder = "Digite seu email",
       @maxlenght = "80",
       @type = "email",
       @autocomplete = "off"
   })
                </div>

                <div class="form-group">
                    <label>Senha</label>
                    @Html.TextBoxFor(f => f.Senha, new
   {
       @id = "txtSenhaNovoCadastro",
       @name = "txtSenhaNovoCadastro",
       @placeholder = "Digite sua senha",
       @class = "form-control",
       @maxlenght = "20",
       @type = "password",
       @autocomplete = "off"
   })

                </div>

                <div class="form-group">
                    <label>Repita a Senha</label>
                    @Html.TextBoxFor(f => f.Senha_Repetida, new
   {
       @id = "txtSenhaRepetidaNovoCadastro",
       @name = "txtSenhaRepetidaNovoCadastro",
       @placeholder = "Digite novamente sua senha",
       @class = "form-control",
       @maxlenght = "20",
       @type = "password",
       @autocomplete = "off"
   })
                </div>

                <div>
                    <button type="button" id="btnSalvar" name="btnSalvar" class="btn btn-primary" style="width:100%">Salvar</button>
                </div>

                <br />
                <br />
            </form>
            <!---->
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/common/messagesCommon.js")
    @Scripts.Render("~/Scripts/meusScripts/login.js")
}